let pokemonRepository=function(){let e=[];function t(t){e.push(t)}function n(){return e}function o(e){i(e).then(function(){document.getElementById("pokemonName").textContent=e.name,document.getElementById("pokemonHeight").textContent="Height: "+e.height;let t=e.types.map(function(e){return e.type.name}).join(", ");document.getElementById("pokemonTypes").textContent="Types: "+t,document.getElementById("pokemonImage").src=e.imageUrl,$("#pokemonModal").modal("show"),document.querySelector(".modal .close").addEventListener("click",function(){$("#pokemonModal").modal("hide")}),$("#pokemonModal").on("click",function(e){e.target===document.querySelector(".modal")&&$("#pokemonModal").modal("hide")}),document.addEventListener("keydown",function(e){"Escape"===e.key&&$("#pokemonModal").modal("hide")})})}function i(e){return fetch(e.detailsUrl).then(function(e){return e.json()}).then(function(t){e.imageUrl=t.sprites.front_default,e.height=t.height,e.types=t.types}).catch(function(e){console.error(e)})}return{add:t,getAll:n,loadList:function e(){return fetch("https://pokeapi.co/api/v2/pokemon/?limit=151").then(function(e){return e.json()}).then(function(e){e.results.forEach(function(e){t({name:e.name,height:e.height,detailsUrl:e.url})})}).catch(function(e){console.error(e)})},loadDetails:i,addListItem:function e(t){let n=document.querySelector(".row"),i=document.createElement("div");i.classList.add("col-lg-2","col-md-3","col-sm-6"),i.classList.add("d-flex"),i.classList.add("justify-content-center");let l=document.createElement("button");l.innerText=t.name.charAt(0).toUpperCase()+t.name.slice(1),l.classList.add("btn","btn-info","btn-custom","mb-2"),l.style.width="120px",l.style.border="1px solid #000",i.appendChild(l),n.appendChild(i),l.addEventListener("click",function(e){o(t)})},showDetails:o}}();pokemonRepository.loadList().then(function(){pokemonRepository.getAll().forEach(function(e){pokemonRepository.addListItem(e)})});